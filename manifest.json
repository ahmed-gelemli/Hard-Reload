{
  "name": "Hard Reload",
  "description": "This is a Chrome Extension that allows you to hard reload web-page. It will remove the cache for current tab and reload it.",
  "version": "1.3",
  "permissions": ["tabs", "browsingData", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {},
  "icons": {
    "64": "images/refreshx64.png",
    "32": "images/refreshx32.png",
    "24": "images/refreshx24.png",
    "16": "images/refreshx16.png"
  },
  "manifest_version": 2

}
